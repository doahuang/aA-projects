<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
    
  <body>
    <%= link_to "The Cats", cats_url %>
    <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    </ul>  
    <% end %>
      
    <% if logged_in? %>
      <h1>Welcome, <%= current_user.user_name %> </h1>
      <%= button_to 'logout', session_url, method: :delete %>
    <% else %>
      <a href=" <%=new_session_url%> ">Log In</a>
      <a href=" <%=new_user_url%> ">Sign Up</a>
    <% end %>
    <%= yield %>
  </body>
</html>
