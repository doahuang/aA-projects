<% action_url = action == :edit ? cat_url(cat) : cats_url %>
<% button_action = action == :edit ? 'Update ' : 'Create ' %>


<form action=" <%= action_url %>" method="post">
  <% if action == :edit %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">
    Name: <input type="text" name="cat[name]" value=" <%= cat.name %> ">
  </label>
  <br>
  
  <label for="sex">
    Sex: 
    Male<input type="radio" name="cat[sex]" value="M" <%= cat.sex == 'M' ? 'checked' : '' %> >
    Female<input type="radio" name="cat[sex]" value="F" <%= cat.sex == 'F' ? 'checked' : '' %> >
  </label>
  <br>
  
  <label for="color">
    Color: 
    <select name="cat[color]">
      <option disabled selected>SELECT COLOR</option>
      <option value="white" <%= cat.color == 'white' ? 'selected' : '' %> >white</option>
      <option value="grey" <%= cat.color == 'grey' ? 'selected' : '' %> >grey</option>
      <option value="brown" <%= cat.color == 'brown' ? 'selected' : '' %> >brown</option>
      <option value="black" <%= cat.color == 'black' ? 'selected' : '' %> >black</option>
    </select>
  </label>
  <br>
  
  <label for="birth_date">
    Birth Date: <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>"> 
  </label>
  <br>
  
  <label for="description">
    Description: 
    <br>
    <textarea name="cat[description]" value=" <%= cat.description %>"> <%= cat.description %>  </textarea>
  </label>
  <br>
  <input type="submit" value="<%=button_action%>CAT!">
  
</form>